# Database Configuration
DATABASE_URL=sqlite:///vid_clip_ai.db

# Directory Paths
BASE_DATA_DIR=./data
LOG_FILE=./logs/vid_clip_ai.log

# Logging
LOG_LEVEL=INFO

# File Watcher
WATCH_INTERVAL_SECONDS=5

# Model Configuration
WHISPER_MODEL=base
WHISPER_DEVICE=cuda

GEMMA_MODEL=gemma-7b
GEMMA_DEVICE=cuda

# Ollama VLM models (used with 'ollama run <model>' command)
# Local model for vision scoring (fast, efficient)
LOCAL_VLM_MODEL=qwen2.5vl:3b

# Cloud/high-quality model for quality assurance (more capable, used sparingly)
CLOUD_VLM_MODEL=qwen3-vl:235b-cloud

# Ollama timeout (seconds)
OLLAMA_TIMEOUT=300

# Scoring Thresholds
CONFIDENCE_THRESHOLD_LOW=0.40
CONFIDENCE_THRESHOLD_HIGH=0.65

# Scoring Weights (must sum to 1.0)
SCORE_WEIGHT_TEXT=0.30
SCORE_WEIGHT_VISION=0.30
SCORE_WEIGHT_AUDIO_EMPHASIS=0.15
SCORE_WEIGHT_FACIAL_EMPHASIS=0.15
SCORE_WEIGHT_CLOUD=0.10

# Export Settings
TOP_N_AUTO_EXPORT=3
MAX_PARALLEL_EXPORTS=2

# Caption Styling
CAPTION_FONTSIZE=32
CAPTION_OUTLINE=2
CAPTION_SHADOW=1

# FFmpeg Settings
VIDEO_CODEC=libx264
AUDIO_CODEC=aac
FFMPEG_PRESET=veryfast
